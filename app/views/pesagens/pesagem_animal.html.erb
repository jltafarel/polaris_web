<h1>Listing pesagens</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Peso</th>
      <th>Data</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pesagens.each do |pesagem| %>
      <tr>
      	<td><%= pesagem.animal.identificacao %></td>
        <td><%= pesagem.peso %></td>
        <td><%= pesagem.data %></td>
        <td><%= link_to 'Show', pesagem %></td>
        <td><%= link_to 'Edit', edit_pesagem_path(pesagem) %></td>
        <td><%= link_to 'Destroy', pesagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>