<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @animal.nome %>
</p>

<p>
  <strong>Identificacao:</strong>
  <%= @animal.identificacao %>
</p>

<p>
  <strong>Raca:</strong>
  <%= @animal.raca.raca %>
</p>

<p>
  <strong>Classificacao:</strong>
  <%= @animal.classificacao.classificao %>
</p>

<p>
  <strong>Propriedade:</strong>
  <%= @animal.propriedade.nome %>
</p>
<p>
   <strong>Ultima pesagem: </strong>
   <% if pesagem = Pesagem.find(:last, :conditions => ['animal_id = ?', @animal.id]) %>
   	  <span> Kg <%= pesagem.peso %></span>
   	  <strong>Data: </strong>>
   	  <%= pesagem.data%>
   	  <%= link_to "Pesagens", '/pesagens/pesagem_animal/' + @animal.id.to_s %>
   <% else %>	
   	  <%= link_to "Adicionar pesagem", new_pesagem_path(@animal.id) %>
   <% end %>	  
</p>

<%= link_to 'Editar', edit_animal_path(@animal) %> |
<%= link_to 'Lista de animais', animais_path %>
