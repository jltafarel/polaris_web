      <ul>
      <% @vacina.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :animal_id %><br>
    <%= f.text_field :animal_id, :value=>params[:format], :readonly=>true %>
