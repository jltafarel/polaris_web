<div class="panel panel-default">

<div class="panel-heading"><h2>Lista de  Animais</h2></div>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Identificacao</th>
      <th>Classificacao</th>
      <th>Raca</th>
      <th>Propriedade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animais.each do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= animal.identificacao %></td>
        <td><%= animal.classificacao.classificao %></td>
        <td><%= animal.raca.raca %></td>
        <td><%= animal.propriedade.nome %></td>
        <td><%= link_to 'Abrir', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Excluir', animal, method: :delete, data: { confirm: 'Deletar '+animal.nome+"?" } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

</div>

<br>

<%= link_to 'Cadastrar Novo animal', new_animal_path %>
