  </div>
  
  <div class="field">
    <%= f.label :medicamento_id %><br>
    <%= f.collection_select :medicamento_id, Medicamento.all, :id, :medicamento %>
    <%= link_to 'Novo Medicamento', new_medicamento_path %>
  </div>
  
  <div class="field">
    <%= f.label :data %><br>
    <%= f.date_select :data %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
